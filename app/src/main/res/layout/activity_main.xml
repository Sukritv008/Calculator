<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background08"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="400dp"
        android:onClick="add"
        android:textColor="#F5F8F5"
        android:textSize="25dp"
        android:background="@drawable/custom_button"
        android:text="+"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="563dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="460dp"
        android:onClick="sub"
        android:text="-"
        android:textSize="25dp"
        android:textColor="#F5F8F5"
        android:background="@drawable/custom_button"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="429dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="85dp"
        android:textColor="#1CE624"
        android:text="Input 1"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="165dp"
        android:textColor="#1CE624"
        android:text="Input 2"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="165dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="265dp"
        android:text="Ans:"
        android:textColor="#DB5F38"
        android:textSize="35dp" />

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="580dp"
        android:onClick="div"
        android:text="/"
        android:background="@drawable/custom_button"
        android:textColor="#EEEBEB" />

    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="580dp"
        android:textSize="25dp"
        android:onClick="mul"
        android:textColor="#F1EBEB"
        android:background="@drawable/custom_button"
        android:text="*" />

    <Button
        android:id="@+id/pow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="520dp"
        android:onClick="pow"
        android:textSize="25dp"
        android:background="@drawable/custom_button"
        android:textColor="#ECE9E9"
        android:text="^" />

    <Button
        android:id="@+id/per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/custom_button"
        android:textSize="25dp"
        android:onClick="per"
        android:text="%"
        android:textColor="#ECE9E9" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="305dp"
        android:background="@drawable/custom_button"
        android:text="Sf"
        android:textColor="#E9E7E7"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="195dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="195dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="6" />
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="195dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="9" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_button2"
        android:textColor="#E9E7E7"
        android:textSize="25dp"
        android:text="0" />


</RelativeLayout>